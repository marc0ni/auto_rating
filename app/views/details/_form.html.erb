<%= form_for(@detail) do |f| %>
  <% if @detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@detail.errors.count, "error") %> prohibited this detail from being saved:</h2>

      <ul>
      <% @detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="container-fluid">
	  <!-- BEGIN FORM-->
	  <form action="#" class="form-horizontal">
		  <h3 class="form-section">All Vehicles Info</h3>
		  <div class="row-fluid">

			  <div class="span3 ">
				  <div class="control-group">
					  <label class="control-label">Make</label>
					  <div class="controls">
						  <input type="text" class="m-wrap span12" <%= f.text_field :make %> 
					  </div>
				  </div>
			  </div> 
			  <!--/span-->
			  <div class="span3 ">
				  <label class="control-label">Model</label>
				  <div class="controls">
					  <input type="text" class="m-wrap span12"<%= f.text_field :model%>
				  </div>
			  </div>
		  </div>
		  <!--/row-->
		  <div class="row-fluid">
			  <div class="span3 ">
				  <div class="control-group">
					  <label class="control-label">Model Year</label>
					  <div class="controls">
						  <input type="text" class="m-wrap span12"<%= f.text_field :year %>
					  </div>
				  </div>
			  </div>
			  <!--/row-->
			  <div class="span3 ">
				  <div class="control-group">
					  <label class="control-label">Cost New</label>
					  <div class="controls">
						   <input type="text" class="m-wrap span12"<%= f.text_field :cost_new %>
					  </div>
				  </div>
			  </div>
			  <!--/span-->
			  <div class="span3 ">
				  <div class="control-group">
					  <label class="control-label">Age Group</label>
					  <div class="controls">
						  <input type="text" class="m-wrap span12" <%= f.text_field :age_group %>
					  </div>
				  </div>
			  </div>
			  <!--/span-->
			  <div class="span3 ">
				  <div class="control-group">
					  <label class="control-label">Territory</label>
					  <div class="controls">
						  <input type="text" class="m-wrap span12" <%= f.text_field :territory %>
					  </div>
				  </div>
			  </div>
		  </div>
	  
		  
		  <h3 class="form-section">Trucks, Truck-Tractors, and Trailers Info</h3>
			  <div class="row-fluid">
				  <div class="span3 ">
					  <div class="control-group">
						  <label class="control-label">Size Class</label>
						  <div class="controls">
							  <input type="text" class="m-wrap span12"<%= f.text_field :size_class %>
						  </div>
					  </div>
				  </div>
				  <!--/span-->
				  <div class="span3 ">
					  <div class="control-group">
						  <label class="control-label">Load Capacity</label>
						  <div class="controls">
							  <input type="text" class="m-wrap span12" <%= f.text_field :load_capacity  %>
						  </div>
					  </div>
				  </div>
				  <!--/span-->
				  <div class="span3 ">
					  <div class="control-group">
						  <label class="control-label">Fleet/Non-fleet</label>
						  <div class="controls">
							  <input type="text" class="m-wrap span12" <%= f.text_field :fleet_nonfleet %>
						  </div>
					  </div>
				  </div>
				  
				  <div class="span3 ">
					  <div class="control-group">
						  <label class="control-label">Specified Causes</label>
						  <div class="controls">
							  <input type="text" class="m-wrap span12" <%= f.text_field :spec_causes %>
						  </div>
					  </div>
				  </div>
			  </div>
			  
			  
			  <div class="row-fluid">
				  <div class="span3 ">
					  <div class="control-group">
						  <label class="control-label">GVW </label>
						  <div class="controls">
							  <input type="text" class="m-wrap span12"<%= f.text_field :gvw %>
						  </div>
					  </div>
				  </div>
				  <!--/span-->
				  <div class="span3 ">
					  <div class="control-group">
						  <label class="control-label">GCW </label>
						  <div class="controls">
							  <input type="text" class="m-wrap span12" <%= f.text_field :gcw %>
						  </div>
					  </div>
				  </div>
				  <!--/span-->
				  <div class="span3 ">
					  <div class="control-group">
						  <label class="control-label">Business Use</label>
						  <div class="controls">
							  <input type="text" class="m-wrap span12" <%= f.text_field :business_use%>
						  </div>
					  </div>
				  </div>
				  
				  <div class="span3 ">
					  <div class="control-group">
						  <label class="control-label">Radius Class</label>
						  <div class="controls">
							  <input type="text" class="m-wrap span12" <%= f.text_field :radius_class %>
						  </div>
					  </div>
				  </div>
			  </div>
			  
	  		  <!--/row-->
	  		  <div class="form-actions">
	  			  <button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>
	  			  <button type="button" class="btn">Cancel</button>
	  		  </div>
			  
		  </div>
	  </div>
  </div>

<% end %>
