<h1>Listing Details</h1>

<table class="table-bordered table-striped table-condensed flip-content">
  <thead class="flip-content">
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Cost new</th>
      <th>Age group</th>
      <th>Territory</th>
      <th>Size class</th>
      <th>Load capacity</th>
      <th>Fleet nonfleet</th>
      <th>Spec causes</th>
      <th>GVW</th>
      <th>GCW</th>
      <th>Business use</th>
      <th>Radius class</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.make %></td>
        <td><%= detail.model %></td>
        <td><%= detail.year %></td>
        <td><%= number_to_currency(detail.cost_new) %></td>
        <td><%= detail.age_group %></td>
        <td><%= detail.territory %></td>
        <td><%= detail.size_class %></td>
        <td><%= detail.load_capacity %></td>
        <td><%= detail.fleet_nonfleet %></td>
        <td><%= detail.spec_causes %></td>
        <td><%= detail.gvw %></td>
        <td><%= detail.gcw %></td>
        <td><%= detail.business_use %></td>
        <td><%= detail.radius_class %></td>
        <td><%= link_to 'Show', detail %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

