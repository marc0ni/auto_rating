<h1>Listing limits</h1>

<table>
  <thead>
    <tr>
      <th>Partial</th>
      <th>Bipd</th>
      <th>Medical</th>
      <th>Risk</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @limits.each do |limit| %>
      <tr>
        <td><%= limit.partial %></td>
        <td><%= limit.bipd %></td>
        <td><%= limit.medical %></td>
        <td><%= limit.risk %></td>
        <td><%= link_to 'Show', limit %></td>
        <td><%= link_to 'Edit', edit_limit_path(limit) %></td>
        <td><%= link_to 'Destroy', limit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

